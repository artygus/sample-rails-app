%h1 Listing users

- if notice
  .alert.alert-info
    = notice

%table.table.table-hover
  %thead
    %tr
      %th Email
      %th Registered
      %th Rank
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.rank
        %td= user.created_at.to_date
        %td= link_to 'Show', admin_user_path(user)
        %td= link_to 'Edit', edit_admin_user_path(user)
        %td= link_to 'Destroy', admin_user_path(user), :method => :delete, :data => { :confirm => 'Are you sure?' }, turboboost: true

= link_to 'New User', new_admin_user_path
